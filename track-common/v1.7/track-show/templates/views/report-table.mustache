<style>
    td.link span{border-bottom:1px dashed lightgray; cursor:pointer}
    .pointer{cursor: pointer;}
</style>
<div class="table-report-box">
    <table class="table table-striped table-report">
        <thead>
        <tr>
            {{#table-columns}}
                <th class="c-cell {{is_sorted}} {{class}}" style='visibility: hidden' onclick="return refresh_report('sort_by', '{{name}}');">{{caption}}</th>
            {{/table-columns}}
        </tr>
        </thead>
        <tbody>
        {{#table_rows}}
            <tr>
                {{#values}}
                <td {{nowrap}} class="c-cell {{class}}" style='visibility: hidden;'>
                    <span {{#inner-data}}{{#values}}data-{{name}}="{{value}}"{{/values}}{{/inner-data}} id="{{inner-id}}" class="{{inner-class}}" {{#action}}onclick="return refresh_report('{{name}}', '{{value}}');"{{/action}}>{{value}}</span>
                </td>
                {{/values}}
            </tr>
        {{/table_rows}}
        </tbody>
        {{#table-total}}
            <tfoot>
            <tr>
                {{#values}}
                    <td class="c-cell {{class}}" style='visibility: hidden'>{{value}}</td>
                {{/values}}
            </tr>
            </tfoot>
        {{/table-total}}
    </table>
</div>