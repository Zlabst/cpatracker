<div class="header-report" style="width:100%">
    <div class="dropdown date-select pull-left">
        <a class="dropdown-toggle" href="">
            <h2>{{report_caption}} <span class="amid">за</span></h2>
            <div class="pull-right" id="per_day_range" style="margin-left:7px;">
                <h2>
                    <span id="cur_day_range">
                        <span class="date">{{date_from}}</span>
                        <span class="amid">—</span>
                        <span class="date">{{date_to}}</span>
                        <i class="cpa cpa-angle-down"></i>
                    </span>
                </h2>
            </div>
        </a>

        <ul class="dropdown-menu dropdown-menu-right">
            {{#toolbar-buttons-date-selector}}
                <li><a class="dropdown-link" href="" onclick="return refresh_report('{{name}}', '{{value}}');">{{caption}}</a></li>
            {{/toolbar-buttons-date-selector}}

            <li class="dropdown-footer">
                <a class="dropdown-link" data-original-title="" data-popover-content="#date-range" data-toggle="range-popover" href="">Свой интервал<i class="cpa cpa-angle-right pull-right"></i></a>
            </li>
        </ul>
    </div>
    {{#header-toolbar}}
    <div role="toolbar" class="btn-toolbar pull-right">
        <div class="btn-group" data-toggle="buttons">
            {{#buttons}}
                <label class="btn btn-default {{active}}" onclick="{{action}}">
                    <input type="radio" name="{{name}}" autocomplete="off" {{checked}}>
                    <i class="{{button-class}}"></i>
                </label>
            {{/buttons}}
        </div>
    </div>
    {{/header-toolbar}}
</div>

<div class="hidden" id="date-range">
    <div class="popover-body">
        <div class="input-daterange input-group datepicker" id="date-range-inner">
            <input class="form-control" name="start" type="text">
            <span class="input-group-addon">до</span>
            <input class="form-control" name="end" type="text">
        </div>
        <a href="#" class="btn btn-default btn-block" onclick="return refresh_report('custom_range', this);"><span>Показать выбранные</span></a>
    </div>
</div>