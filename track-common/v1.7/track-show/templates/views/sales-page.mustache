<div class="page-heading" id="report-{{report_name}}">
    <div class="header-content">
        {{>report-header}}
        {{>sales-chart}}
    </div>
    {{>report-table}}
    {{>sales-table-toolbar}}
</div>
{{>report-params}}

<!--Search-->

<form class="search" id="flow_search_from" onSubmit="return filter_sales($('#sales_filter_value').val())">
    <div class="input-group">
        <div class="form-group has-feedback">
            <input type="text" class="form-control" id="sales_filter_value" value="">
            <a class="form-control-feedback" href="#" onclick="$('#flow_search_from').submit();" type="submit">
                <i class="cpa cpa-magnifier "></i>
            </a>
        </div>

        <div class="input-group-btn">
            <!-- <a class="btn btn-default" href="?csrfkey={{csrf}}&ajax_act=excel_export_sales&date={{date_current}}"><i class="cpa cpa-xlsx"></i></a> -->
        </div>

        </div>
</form>

<div class="link-list-box">
    <table class="table table-striped table-sales-list" id="sales-flow">
        <thead>
        <tr>
            {{#flow-table-header}}
                {{#values}}
                    <th>{{caption}}</th>
                {{/values}}
            {{/flow-table-header}}
        </tr>
        </thead>

        <tbody>
        {{>sales-flow-rows}}
        </tbody>
    </table>
</div>

{{#show_more}}
<div class="show-more">
    <a class="btn btn-link" href="#" onclick="return load_flow(this)">
        <i class="cpa cpa-angle-down"></i>
        <span>Показать больше</span>
        <i class="cpa cpa-angle-down"></i>
    </a>
    <input type="hidden" id="start" value="20">
    <input type="hidden" id="start_s" value="0">
</div>
{{/show_more}}